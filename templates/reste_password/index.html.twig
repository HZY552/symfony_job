{% extends 'base.html.twig' %}

{% block title %}Hello RestePasswordController!{% endblock %}

{% block body %}
    <main class="form-signin w-100 d-flex justify-content-center" style="margin-top: 150px;">
        {% for message in app.flashes('Error') %}
            <div class="modal modal-sheet d-block p-4 py-md-5" tabindex="-1" role="dialog" id="modalSheet" style="position: fixed;">
                <div class="modal-dialog" role="document">
                    <div class="modal-content rounded-4 shadow">
                        <div class="modal-header border-bottom-0">
                            <h1 class="modal-title fs-5">Modal title</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body py-0">
                            {{ message }}
                        </div>
                        <div class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0">
                            <button id="button_close" type="button" class="btn btn-lg btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        {{ form_start(form, {'attr': {'class': 'w-50'}}) }}
        <img class="mb-4" src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Reste Password</h1>
        <div class="form-floating">
            <div class="form-group my-3">
                {{ form_label(form.UserEmail, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.UserEmail, {'attr': {'class': 'form-control pt-3 pb-3','placeholder': 'name@example.com'}}) }}
                {{ form_errors(form.UserEmail) }}
            </div>

            <div class="form-group my-3">
                {{ form_label(form.Phone, 'Phone', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.Phone, {'attr': {'class': 'form-control pt-3 pb-3','placeholder': 'Phone'}}) }}
                {{ form_errors(form.Phone) }}
            </div>

            <div class="form-group my-3">
                {{ form_label(form.plainPassword.first, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control pt-3 pb-3','placeholder': 'Password'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>

            <div class="form-group my-3">
                {{ form_label(form.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control pt-3 pb-3','placeholder': 'Password'}}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2">Reste Password</button>
            <p class="mt-5 mb-3 text-body-secondary">© 2017–2023</p>
        </div>

        {{ form_end(form) }}

    </main>
{% endblock %}
