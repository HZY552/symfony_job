<div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-body-tertiary" style="width: 380px; height: 100vh; overflow-y: scroll;">
    <a href="/profile" class="d-flex align-items-center flex-shrink-0 p-3 link-body-emphasis text-decoration-none border-bottom">
        <svg class="bi pe-none me-2" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
        <span class="fs-5 fw-semibold">List group</span>
    </a>

    <a style="width: 100%;display: flex;align-content: center;flex-direction: row;justify-content: center;align-items: center;" href="/profile/freelance/mes-eduction/4589147">
        <button type="button" class="btn btn-outline-primary me-2" style="width: 100%;margin-bottom: 10px;
                margin-left: 5px;">Ajouter une formation</button>
    </a>
    <div class="list-group list-group-flush border-bottom" style="gap: 10px;margin-left: 3px;margin-right: 3px;">
        {% for e in list_education %}
        <a style="border-radius: 5px;" href={{ '/profile/freelance/mes-eduction/' ~ e.getId()}} class="list-group-item list-group-item-action active py-3 lh-sm" aria-current="true">
            <div class="d-flex w-100 align-items-center justify-content-between">
                <strong class="mb-1">{{ e.getSchool() }}</strong>
                <small>{{ e.getStartYear()|date('Y') ~ ' - ' ~ e.getEndYear()|date('Y') }}</small>
            </div>
        </a>
        {% endfor %}
    </div>
</div>

{% if form is not empty %}
    {{ form_start(form, {'attr': {'class': ' p-3','style':'display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;margin:auto;'}}) }}

    <div class="form-floating">
        <div class="form-group my-3">
            {{ form_label(form.degree, 'Degree', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.degree, {'attr': {'class': 'form-control pt-3 pb-3'}}) }}
            {{ form_errors(form.degree) }}
        </div>
        <div class="form-group my-3">
            {{ form_label(form.school, 'School', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.school, {'attr': {'class': 'form-control pt-3 pb-3'}}) }}
            {{ form_errors(form.school) }}
        </div>

        <div class="form-group my-3">
            {{ form_label(form.startYear, 'Start Year', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.startYear, {'attr': {'class': 'form-control pt-3 pb-3'}}) }}
            {{ form_errors(form.startYear) }}
        </div>

        <div class="form-group my-3">
            {{ form_label(form.endYear, 'End Year', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.endYear, {'attr': {'class': 'form-control pt-3 pb-3'}}) }}
            {{ form_errors(form.endYear) }}
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2">Sauvegarder</button>
    </div>

    {{ form_end(form) }}
{% else %}

{% endif %}




